# Kids Story Time - Environment Variables
# Copy this file to .env and add your API keys
# For Netlify deployment, set these in the Netlify dashboard

# === REQUIRED - Core Services ===

# Supabase Configuration (Database & Auth)
# Get from: https://app.supabase.com/project/[your-project]/settings/api
SUPABASE_URL=https://uewfbzzrgiacgplyoccv.supabase.co
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# OpenAI API Key (Story generation and DALL-E images)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# === ANALYTICS & MONETIZATION ===

# Google Analytics 4
# Get from: https://analytics.google.com/ > Admin > Data Streams
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_ENABLE_ANALYTICS=true

# Google AdSense
# Get from: https://www.google.com/adsense/ > Account > Settings
VITE_ADSENSE_PUBLISHER_ID=ca-pub-XXXXXXXXXXXXXXXX
VITE_AD_SLOT_STORY=XXXXXXXXXX
VITE_AD_SLOT_LIBRARY=XXXXXXXXXX
VITE_AD_SLOT_HOME=XXXXXXXXXX
VITE_AD_SLOT_REWARD=XXXXXXXXXX
VITE_ENABLE_ADS=true

# === REQUIRED - Payment Processing ===

# Stripe API Keys
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# === OPTIONAL - Additional Image Services ===

# Replicate API Token (Stable Diffusion for image generation)
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=

# Pexels API Key (Stock photos for Premium tier - FREE)
# Get from: https://www.pexels.com/api/
PEXELS_API_KEY=

# Unsplash Access Key (Alternative stock photos)
# Get from: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=

# Hugging Face API Key (Alternative AI models)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=

# === OPTIONAL - Analytics & Monitoring ===

# Google Analytics
GA_MEASUREMENT_ID=

# Sentry (Error tracking)
SENTRY_DSN=

# === REACT APP CONFIGURATION ===
# For React app (uses VITE_ prefix)

VITE_SUPABASE_URL=https://uewfbzzrgiacgplyoccv.supabase.co
VITE_SUPABASE_ANON_KEY=
VITE_STRIPE_PUBLIC_KEY=
VITE_OPENAI_API_KEY=
VITE_REPLICATE_API_TOKEN=
VITE_PEXELS_API_KEY=

# === DEPLOYMENT SETTINGS ===

# Environment (development/staging/production)
NODE_ENV=production

# Site URL
SITE_URL=https://kidsstorytime.org

# API Endpoints (if using separate backend)
API_URL=https://api.kidsstorytime.org